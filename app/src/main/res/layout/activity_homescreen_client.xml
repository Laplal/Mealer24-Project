<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/signedInAsText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="120dp"
            android:layout_marginBottom="21dp"
            android:text="Signed in as Client" />

        <SearchView
            android:id="@+id/repasSearchId"
            android:layout_width="398dp"
            android:layout_height="112dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="66dp">

        </SearchView>

        <ListView
            android:id="@+id/listOfMealsId"
            android:layout_width="match_parent"
            android:layout_height="155dp">

        </ListView>

        <Button
            android:id="@+id/OrderMeal"
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:text="Order a meal"
            android:textSize="16sp" />

        <Button
            android:id="@+id/OrderRequests"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:text="Check order status"
            android:textSize="16sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="85dp" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="408dp"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/MyMeals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="My orders"
                android:textSize="12sp" />

            <Button
                android:id="@+id/logoutBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Logout" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>